# Flask
FLASK_ENV=production
SECRET_KEY=generate-a-strong-random-key-here

# JWT
JWT_SECRET_KEY=generate-another-strong-random-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# MongoDB (use your VPS MongoDB)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=hypnos

# Storage
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=/home/bruno/hypnos/storage/audio

# S3/Spaces (optional, for cloud storage)
# STORAGE_TYPE=s3
# S3_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_BUCKET=hypnos-audio
# S3_REGION=nyc3

# ElevenLabs (optional)
# ELEVENLABS_API_KEY=your-api-key
